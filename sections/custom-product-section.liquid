<!-- product-section.liquid -->
<section class="product-section">
  <div class="section-heading">
    <h2>{{ section.settings.heading }}</h2>
  </div>
  <div class="product-grid">
    {% for product in collections[section.settings.collection_handle].products %}
      <div class="product-item">
        <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}" width="300" height="300">
        <div class="plus-sign" onclick="event.stopPropagation(); openModal('{{ product.title }}', '{{ product.price | money }}', '{{ product.description | escape }}', '{{ product.images.first | img_url: '300x300' }}')">+</div>
        <a href="{{ product.url }}">
        </a>
      </div> 
    {% endfor %}
  </div>
</section>

<!-- Modal for ordering -->
<div id="orderModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>

    <!-- Modal First Section: Description    -->

    <div class="modal-flex-1">
      <div class="modal-img-container">

            <img id='modal-image' src="" alt="{{ product.title }}" width="120" height="140">
      </div>
      <div class="modal-text-container">
        <h2 id="modal-title"></h2>
        <p id="modal-price"></p>
        <p id="modal-description"></p>
      </div>
    </div>

    <!-- Modal Section 2: Color Picker    -->

    <div class="modal-flex-2">
      <h2 class="modal-label">Color</h2>
      <div class="color-flex">
        <button class="color-1">Red</button>
        <button class="color-2">White</button>
      </div>
    </div>

    <!-- Modal Section 3: Choose the size -->

    <div class="modal-flex-2">
      <h2 class="modal-label">Size</h2>
      <select id="size-dropdown">
        <option vlaue="x-small">XS</option>
        <option value="small">S</option>
        <option value="medium">M</option>
        <option value="large">L</option>
        <option value="x-large">XL</option>
      </select>
    </div>

    <!-- Add to card button -->
    <button class="add-to-cart">ADD TO CART →</button>
  </div>
</div>

<style>
  .modal-label {
    font-family: 'jost';
    font-size: 14px;
  }
  #modal-content {
    max-width: 312px;
  }

  #modal-title {
    font-family: 'jost';
    font-size: 16px;
    font-weight: lighter;
    color: #000;
  }

  #modal-price {

  font-family: 'Lustria';
  font-weight: bold;
  font-size: 16px;
  color: #000;
  }

  #modal-description {
    font-family: 'jost';
    font-weight: lighter;
    font-size: 12px;
    color: #000;

  }
  .modal-image {
    object-fit: cover;
  }

  .color-1 , .color-2 {
    border: none;
    width: 129px;
    height: 40.5px;
    border-left: 6px;
    border-color: goldenrod; /* Placeholder Color */
    font-size: 18px;
    font-family: 'jost';

  }

  .color-1:hover , .color-2:hover {
    background-color: #888;
  }

  .color-1:focus , .color-2:focus {
    background-color: #000;
    color:white;
  }

  .modal-flex-1 {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .modal-flex-2 {
    display: flex;
    flex-direction: column;
  }

  .add-to-cart {
      border: none;
      padding: 12px 75px;
      background-color: #000;
      color: #fff;
      margin-top: 50px;
      font-size: 16px ;
      font-family: 'jost';
      width: 100%;
  }

  .product-section {
    display: flex;
    flex-direction: column;
    padding: 90px 63px 39px;
    background-color: #FFFFFF;
  }

  .section-heading h2 {
    text-align: left;
    margin-bottom: 30px;
    font-size: 36px;
    font-family: 'Lustria', sans-serif;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .product-item {
    background-color: white;
    text-align: center;
    position: relative; /* Added for positioning the plus sign */
  }

  .product-item img {
    width: 100%;
    height: auto;
    border-bottom: 1px solid #ddd;
  }

  .plus-sign {
    position: absolute;
    top: 10px; /* Adjust as needed */
    right: 10px; /* Adjust as needed */
    background-color: white;
    border-radius: 50%;
    width: 22px; /* Size of the plus sign */
    height: 22px; /* Size of the plus sign */
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 24px; /* Font size of the plus */
    color: #000; /* Color of the plus */
  }

  /* Modal styles */
  .modal {
    display: none; /* Hidden by default */
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
  }

  .modal-content {
    background-color: #ffffff;
    margin: 15% auto;
    padding: 12px 20px 20px 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 500px;
  }

  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close:hover,
  .close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }

  .custom-dropdown {
  position: relative;
  display: inline-block;
  width: 100%; /* Adjust width based on your layout */
}

#size-dropdown {
  width: 100%;
  padding: 10px 40px 10px 10px; /* Adds padding, the second value is for the space on the right */
  background-color: #fff; /* White background */
  border: 1px solid #000; /* Thin black border */
  border-radius: 4px; /* Slightly rounded corners */
  appearance: none; /* Remove default dropdown styling */
  -webkit-appearance: none;
  -moz-appearance: none;
  font-size: 16px; /* Adjust font size for modern look */
  color: #333; /* Text color */
  cursor: pointer;
}

/* Style the dropdown arrow (right square) */
.custom-dropdown::after {
  content: "▼"; /* Unicode arrow symbol */
  font-size: 14px;
  color: #000; /* Color of the arrow */
  position: absolute;
  top: 50%;
  right: 10px; /* Adjust based on padding */
  transform: translateY(-50%);
  background-color: #fff; /* Same background color as dropdown */
  border-left: 1px solid #000; /* Border on the left to create the square */
  padding: 10px;
  pointer-events: none; /* Prevent clicking on arrow */
}


  /* Responsive adjustments */
  @media (max-width: 768px) {
    .product-section {
      padding: 40px 17px 23px;
    }

    .section-heading h2 {
      text-align: center;
      margin-bottom: 20px;
      font-size: 24px;
      font-family: 'Lustria', sans-serif;
    }

    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<script>
  function openModal(title, price, description, imageUrl) {
    document.getElementById('modal-image').src = imageUrl;
    document.getElementById('modal-title').innerText = title;
    document.getElementById('modal-price').innerText = price;
    document.getElementById('modal-description').innerText = description;
    document.getElementById('orderModal').style.display = 'block';
  }

  function closeModal() {
    document.getElementById('orderModal').style.display = 'none';
  }
</script>

{% schema %}
{
  "name": "Product Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection_handle",
      "label": "Select Collection"
    }
  ],
  "presets": [
    {
      "name": "Default Product Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
