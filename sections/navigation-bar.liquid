<!-- navigation-bar.liquid -->
<section class="navigation-bar">
  <div class="container">
    <!-- Hamburger Menu Icon (visible only on small screens) -->
    <div class="hamburger-menu" onclick="toggleMenu()">
      <span></span>
      <span></span>
      <span></span>
    </div>

    <!-- Logo -->
    <div class="nav-logo">
      {% if section.settings.logo %}
        <a href="{{ shop.url }}">
          <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}" width="165" height="19">
        </a>
      {% else %}
        <a href="{{ shop.url }}">
          <img src="https://via.placeholder.com/100x50?text=Logo" alt="Placeholder Logo" width="100" height="50">
        </a>
      {% endif %}
    </div>

    <!-- Navigation Links (Text and Button) -->
    <div class="nav-links">
      <div class="nav-text">
        <p>{{ section.settings.middle_text }}</p>
      </div>
      <div class="nav-button">
        <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>
      </div>
    </div>
  </div>

  <!-- Mobile Menu (appears when hamburger is clicked on small screens) -->
  <div class="mobile-menu">
    <div class="mobile-nav-text">
      <p>{{ section.settings.middle_text }}</p>
    </div>
    <div class="mobile-nav-button">
      <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>
    </div>
  </div>
</section>


<!-- Custom Styling -->
<style>
  .navigation-bar .container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-logo {
  flex: 1; /* Logo takes 1/3rd of the space */
}

.nav-links {
  display: flex;
  flex: 2; /* Links take 2/3rds of the space */
  justify-content: space-between;
  align-items: center;
}

.nav-text {
  margin: 0 auto; /* Centers the text within the flexbox */
}

.nav-button {
  margin-left: auto; /* Aligns the button to the right */
}

/* For small screens */
.hamburger-menu {
  display: none;
  cursor: pointer;
}

.hamburger-menu span {
  display: block;
  width: 25px;
  height: 3px;
  margin: 5px;
  background-color: black;
}

/* Show hamburger on small screens */
@media (max-width: 768px) {
  .hamburger-menu {
    display: block;
  }

  .nav-links {
    display: none; /* Hide the desktop navigation */
  }

  .mobile-menu {
    display: block; /* Show mobile menu */
  }
}

/* Mobile menu hidden by default */
.mobile-menu {
  display: none;
}

/* When the hamburger is clicked, show the mobile menu */
.mobile-menu.active {
  display: block;
}


  body {
    font-family: 'jost', sans-serif;
  }

  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 64px;
    background-color: #f5f5f5;
    padding: 0 20px;
    position: relative; /* For positioning logo on small screens */
  }

  .nav-logo img {
    object-fit: contain;
  }

  .nav-links {
    display: flex;
    align-items: center;
  }

  .nav-text p {
    margin: 0;
    font-size: 16px;
  }

  .nav-button .btn {
    text-decoration: none;
    background-color: #FFF544;
    color: #000000;
    padding: 11px 41px;
    border-radius: 5px;
    transition: opacity 0.3s ease;
  }

  .nav-button .btn:hover {
    opacity: 0.8;
  }

  /* Hamburger Menu Styling */
  .hamburger-menu {
    display: none;
    flex-direction: column;
    cursor: pointer;
    margin-right: 20px;
  }

  .hamburger-menu span {
    width: 25px;
    height: 3px;
    background-color: #000;
    margin: 4px 0;
    transition: all 0.3s ease;
  }

  /* Mobile Menu Styling */
  .mobile-menu {
    display: none;
    flex-direction: column;
    align-items: center;
    width: 100%;
    background-color: #f5f5f5;
    position: absolute;
    top: 64px;
    left: 0;
    z-index: 999; /* Ensure it appears above other elements */
    padding: 20px 0;
  }

  .mobile-nav-text p {
    margin: 10px 0;
    font-size: 16px;
    text-align: center;
  }

  .mobile-nav-button .btn {
    padding: 10px 30px;
  }

  /* Responsive adjustments for small screens */
  @media (max-width: 768px) {
    /* Show hamburger menu */
    .hamburger-menu {
      display: flex;
    }

    /* Hide navigation links on small screens */
    .nav-links {
      display: none;
    }

    /* Center the logo */
    .nav-logo {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
    }

    /* Show mobile menu when active */
    .mobile-menu.active {
      display: flex;
    }
  }

  /* Ensure equidistant layout on large screens */
  @media (min-width: 769px) {
    .container {
      justify-content: space-between;
      padding: 0 50px;
    }

    .nav-links {
      display: flex;
      align-items: center;
    }

    .nav-text {
      margin-right: auto;
      margin-left: auto;
    }

    .nav-button {
      margin-left: auto;
    }
  }
</style>

<!-- JavaScript for Hamburger Menu Toggle -->
<script>
  function toggleMenu() {
    const menu = document.querySelector('.mobile-menu');
    menu.classList.toggle('active');
  }
</script>







