

<!-- banner-section.liquid -->
<section class="banner-section">
  <div class="banner-image">
    {% if section.settings.banner_image %}
      <img src="{{ section.settings.banner_image | img_url: '1600x600' }}" alt="Banner" class="full-width-banner">
    {% else %}
      <img src="https://via.placeholder.com/1457x390?text=Banner+Image" alt="Placeholder Banner" class="full-width-banner">
    {% endif %}
  </div>
  <div class="content-container">
    <div class="text-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.paragraph }}</p>
      <a href="{{ section.settings.button_link }}" class="shop-btn">{{ section.settings.button_text }}</a>
    </div>
    <div class="image-content">
      {% if section.settings.content_image %}
        <img src="{{ section.settings.content_image | img_url: '1600x600' }}" alt="Content Image">
      {% else %}
        <img src="https://via.placeholder.com/300x300?text=Content+Image" alt="Placeholder Content" style="width: auto; height: auto;">
      {% endif %}
    </div>
  </div>
</section>

<style>
  .banner-section {
    display: flex;
    flex-direction: column;
  }

  .banner-image {
    width: 100%; 
  }

  .full-width-banner {
    width: 100%; 
    height: auto; 
  }

  .shop-btn {
    padding: 14px 57px;
    text-decoration: none;
    background-color: #000000;
    color: #FFFFFF;
  }

  .content-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: #FFFFFF;
    overflow: hidden; 
  }

  .text-content {
    flex: 0 0 auto; 
    padding: 10px;
    padding-left: 60px;
  }

  .text-content h2 {
    font-size: 70px;
    font-weight: bold;
    margin-bottom: 50px;
  }

  .text-content p {
    margin-bottom: 50px;
    font-size: 20px;
    line-height: 140%;
    max-width: 490px;
  }

  .image-content {
    flex: 1; 
    min-width: 0; 
  }

  .image-content img {
    width: auto; 
    height: auto; 
    min-width: 100%; 
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .banner-section {
        flex-direction: column-reverse;
    }

    .text-content p {
      font-size: 16px;
      line-height: 130%;
    }

    .text-content h2 {
      font-size: 30px;
      font-weight:600;
      line-height: 0px;
    }

    .banner-image{
        display: none;
    }

    .shop-btn {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        bottom: 50px;
    }

    .image-content{
        position: relative;
    }
    .content-container {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }
    .text-content {

        align-items: center;
        padding-left: 0;
    }

    .text-content, .image-content {
      margin: 10px 0;
      min-width: 0;
    }
  }
</style>



{% schema %}
    {
      "name": "Banner Section",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner_image",
          "label": "Banner Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "The Gift Guide"
        },
        {
          "type": "textarea",
          "id": "paragraph",
          "label": "Paragraph",
          "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "default": "/collections/all"
        },
        {
          "type": "image_picker",
          "id": "content_image",
          "label": "Content Image"
        }
      ],
      "presets": [
        {
          "name": "Default Banner Section",
          "category": "Custom"
        }
      ]
    }
    {% endschema %}
