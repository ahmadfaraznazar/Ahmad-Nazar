<!-- text-section.liquid -->
<section class="small-text-section">
  <div class="small-text-content">
    {{ section.settings.text }}
  </div>
</section>

<style>
  .small-text-section {
    display: flex;
    justify-content: center; 
    align-items: center; 
    background-color: #f5f5f5;
    color:#000000;
  }

  .small-text-content {
    font-size: 16px; 
    text-align: center; 
  }
</style>

{% schema %}
{
  "name": "Text Section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text Content",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Default Text Section"
    }
  ]
}
{% endschema %}
